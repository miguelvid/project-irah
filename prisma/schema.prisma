generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurante {
  id          String   @id @default(uuid())
  nome        String
  slug        String   @unique
  descricao   String?
  endereco    String?
  telefone    String?
  imageAvatar String
  imageCover  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bebidas     Bebida[]
  menus       Menu[]
}

model Bebida {
  id            Int         @id @default(autoincrement())
  nome          String
  descricao     String?
  preco         Float
  imageUrl      String?
  restauranteId String
  restaurante   Restaurante @relation(fields: [restauranteId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Menu {
  id             Int         @id @default(autoincrement())
  nome           String
  entrada        String
  precoEntrada   Float
  salada         String
  precoSalada    Float
  pratoPrincipal String
  precoPrato     Float
  doce           String
  precoDoce      Float
  precoTotal     Float       @default(0.0)
  imageUrl       String?
  restauranteId  String
  restaurante    Restaurante @relation(fields: [restauranteId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}
